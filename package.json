{
  "name": "ng-webpack-autoload",
  "version": "1.0.0",
  "description": "A boilerplate project for autoloading angular modules",
  "main": "dist/server.bundle.js",
  "engines": {
    "node": ">=5"
  },
  "scripts": {
    "prestart": "bnr prestart",
    "start": "bnr start",
    "client:webpack": "bnr client:webpack",
    "server:webpack": "bnr server:webpack",
    "server:watch": "bnr server:watch"
  },
  "author": "Amin Meyghani <meyghania@gmail.com> (http://meyghani.com)",
  "license": "ISC",
  "dependencies": {
    "angular": "^1.5.8",
    "connect": "^3.4.1",
    "morgan": "^1.7.0",
    "serve-static": "^1.10.2"
  },
  "devDependencies": {
    "babel-core": "^6.7.6",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.6.0",
    "better-npm-run": "0.0.10",
    "concurrently": "^2.0.0",
    "eslint": "^3.4.0",
    "eslint-config-google": "^0.6.0",
    "rimraf": "^2.5.4",
    "supervisor": "^0.10.0",
    "webpack": "^1.12.14"
  },
  "betterScripts": {
    "client:webpack": {
      "command": "webpack --config webpack.config.client.js -w --debug --devtool eval --output-pathinfo"
    },
    "server:webpack": {
      "command": "node_modules/.bin/webpack --config webpack.config.server.js -w -d"
    },
    "server:watch": {
      "command": "node_modules/.bin/supervisor -w webpack.config.server.js, server dist/server.bundle.js"
    },
    "prestart": {
      "command": "node_modules/.bin/rimraf dist && node_modules/.bin/webpack --config webpack.config.server.js"
    },
    "start": {
      "command": "node_modules/.bin/concurrently \"bnr server:webpack -s\" \"bnr server:watch\"  \"bnr client:webpack -s\""
    },
    "test": {
      "command": "echo testing ...",
      "env": {
        "NODE_ENV": "test"
      }
    }
  }
}
